<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="60dp"
        android:paddingRight="10dp"
        android:paddingBottom="60dp"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnac"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsiltik"
                android:text="AC"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnpar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="( )"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnyuzde"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnyuzdetik"
                android:text="%"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnbol"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnoptik"
                android:text="/"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="7"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="8"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="9"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btncarpma"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnoptik"
                android:text="X"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="4"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="5"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="6"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btneksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnoptik"
                android:text="-"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btntop"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnoptik"
                android:text="+"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnmutlak"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="+/-"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="0"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnnokta"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnsayitik"
                android:text="."
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnesit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenarlik"
                android:onClick="btnesittik"
                android:text="="
                android:textSize="20dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>